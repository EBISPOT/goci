    <bean name="gwasDAO" class="uk.ac.ebi.fgpt.goci.dao.OntologyDAO" init-method="init">
        <property name="ontologyResource" value="gwas-data-latest.owl"/>
        <property name="ontologyConfiguration" ref="config"/>
    </bean>

</beans>