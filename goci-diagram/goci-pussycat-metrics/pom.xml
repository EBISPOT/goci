<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>uk.ac.ebi.fgpt</groupId>
    <artifactId>goci-diagram</artifactId>
    <version>1.0.5-SNAPSHOT</version>
  </parent>
      <groupId>uk.ac.ebi.fgpt</groupId>
      <artifactId>goci-pussycat-metrics</artifactId>
      <version>1.0.5-SNAPSHOT</version>
      <name>goci-pussycat-metrics</name>
      <url>http://maven.apache.org</url>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
     <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <finalName>goci-pussycat-metrics</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>src/main/assembly/goci-assembly-descriptor.xml</descriptor>
                    </descriptors>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>uk.ac.ebi.fgpt.goci.pussycat.GOCIPussycatMetricsDriver</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>uk.ac.ebi.fgpt</groupId>
            <artifactId>goci-pussycat</artifactId>
            <version>1.0.5-SNAPSHOT</version>
            <type>jar</type>
            <classifier>classes</classifier>
        </dependency>

        <!-- servlet - required to reuse pussycat session code, even though we don't make use of http sessions here -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
        </dependency>

    </dependencies>

</project>
