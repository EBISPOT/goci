<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- configuration: sets up ontology manager and data factory given mappings to the set resources -->
    <bean name="config" class="uk.ac.ebi.spot.goci.lang.OntologyConfiguration" init-method="init">
        <property name="efoResource" value="file:///Users/catherineleroy/Documents/github_project/ExperimentalFactorOntology/ExFactorInOWL/releasecandidate/my_efo_merged.owl" />
        <property name="gwasDiagramSchemaResource" value="classpath:gwas-diagram.owl" />
    </bean>

    <!-- publisher: this does all the work and is the main API point of access -->
    <bean name="publisher" class="uk.ac.ebi.spot.goci.service.DefaultGwasOwlPublisher">
        <property name="configuration" ref="config" />
        <property name="singleNucleotidePolymorphismDAO" ref="snpDAO" />
        <property name="traitAssociationDAO" ref="traitAssociationDAO" />
        <property name="studyDAO" ref="studyDAO" />
        <property name="converter" ref="converter" />
        <!-- uncomment the following line to build a KB limited to a small number of studies -->
        <!--<property name="studiesLimit" value="10" />-->
    </bean>

    <!-- converter: all the hard work of OWL conversion is here -->
    <bean name="converter" class="uk.ac.ebi.spot.goci.service.DefaultGwasOwlConverter">
        <property name="configuration" ref="config" />
        <property name="ontologyDAO" ref="gwasSchemaDAO" />
    </bean>

    <!-- SNP DAO -->
    <bean name="snpDAO" class="uk.ac.ebi.spot.goci.dao.JDBCSingleNucleotidePolymorphismDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <!-- Trait Association DAO -->
    <bean name="traitAssociationDAO" class="uk.ac.ebi.spot.goci.dao.JDBCTraitAssociationDAO" init-method="init">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
        <property name="SNPDAO" ref="snpDAO" />
        <property name="ontologyDAO" ref="efoDAO" />
    </bean>

    <!-- Study DAO -->
    <bean name="studyDAO" class="uk.ac.ebi.spot.goci.dao.JDBCStudyDAO" init-method="init">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
        <property name="traitAssociationDAO" ref="traitAssociationDAO" />
    </bean>

    <!-- Ontology DAOs -->
    <bean name="efoDAO" class="uk.ac.ebi.spot.goci.dao.DefaultOntologyDAO" init-method="init">
        <property name="ontologyConfiguration" ref="config" />
        <property name="ontologyURI" value="http://www.ebi.ac.uk/efo" />
    </bean>

    <bean name="gwasSchemaDAO" class="uk.ac.ebi.spot.goci.dao.DefaultOntologyDAO" init-method="init">
        <property name="ontologyConfiguration" ref="config" />
        <property name="ontologyURI" value="http://rdf.ebi.ac.uk/terms/gwas" />
    </bean>

    <!-- GWAS Database setup and access -->
    <bean name="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="datasource" />
    </bean>

    <bean id="datasource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin:@ora-vm-021.ebi.ac.uk:1531:spotpro" />
        <property name="username" value="gwas" />
        <property name="password" value="gwa5d6" />
        <property name="defaultAutoCommit" value="false" />
        <property name="initialSize" value="32" />
        <property name="maxIdle" value="32" />
        <property name="maxActive" value="32" />
        <property name="maxWait" value="-1" />
    </bean>

</beans>